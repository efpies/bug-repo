@page "/txs"
@page "/txs/{currencyId}"

@using System.Security.Claims
@using QoodenTask.Extensions

@attribute [Authorize]
<AuthorizeView>
    <Authorized>
        <PageTitle>Transactions</PageTitle>
        <TrasactionsData Role=@context.User.Claims.First(c => c.Type == ClaimsIdentity.DefaultRoleClaimType).Value
                             UserId=@context.User.GetIdFromClaims() CurrencyId="currencyId"></TrasactionsData>

    </Authorized>
</AuthorizeView>

@code{

    [Parameter]public string? currencyId { get; set; }

}